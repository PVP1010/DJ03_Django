<!--Прописываем наследование оснавного шаблона -->

{% extends 'main/layoute.html' %}

{% block title %}
	<title>Новостная страница</title>     <!--Заполняем блок с заголовком -->
{% endblock %}

{% block content %}
<h1>Новостная страница</h1>               <!--Название страницы -->

{% for new in news %}                      <!--достаём из словаря views.py/news то что нам нужно -->
	{% if news %}                          <!--Условие Если news не пусто, то: выводи новости -->
		<div>
			<h3> {{ new.title }} </h3>                       <!--Выводим заголовок -->
			<h6> {{ new.short_description }} </h6>           <!--Выводим краткое описание -->
			<p> {{ new.text }} </p>                          <!--Выводим текст новости -->
			<p> {{ new.pub_date }} </p>                      <!--Выводим дату публикации -->
			<p> {{ new.author }} </p>                        <!--Выводим автора -->
		</div>
	{% else %}                               <!--Иначе Если news пусто, то: выводи сообщение "Новостей нет" -->
		<h4>Новостей нет</h4>
	{% endif %}
{% endfor %}

{% endblock %}